# https://vdirsyncer.readthedocs.io/en/stable/tutorial.html
[general]
status_path = ~/.vdirsyncer/status/

[pair my_contacts]
a = my_contacts_local
b = my_contacts_remote
collections = ["from a", "from b"]

[storage my_contacts_local]
type = filesystem
path = ~/.contacts/
fileext = .vcf

[storage my_contacts_remote]
type = carddav

url = https://danleitzke.me/owncloud/remote.php/contacts/
username.fetch = ["command", "~/.vdirsyncer/get-creds.sh", "--user"]
password.fetch = ["command", "~/.vdirsyncer/get-creds.sh", "--pass"]

[pair my_calendars]
a = my_calendars_local
b = my_calendars_remote
collections = ["from a", "from b"]
metadata = ["color"]

[storage my_calendars_local]
type = filesystem
path = ~/.calendars/
fileext = .ics

[storage my_calendars_remote]
type = caldav

url = https://danleitzke.me/owncloud/remote.php/dav/
username.fetch = ["command", "~/.vdirsyncer/get-creds.sh", "--user"]
password.fetch = ["command", "~/.vdirsyncer/get-creds.sh", "--pass"]

